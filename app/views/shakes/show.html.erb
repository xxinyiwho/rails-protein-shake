
<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
url('<%= cl_image_path @shake.photo, cloud_name: "dwiuad2m9", height: 800, width: 1080, crop: :fill %>')">

<div class="navbar sticky-top">
  <%= link_to "Home", root_path, class: "btn btn-light" %>
  <%= link_to "add to your shake", new_shake_dose_path(@shake), class: "btn btn-primary" %>
</div>
</div>

<div class="container">
  <h2><%= @shake.name %></h2>

  <div class="dose">
    <% @shake.doses.each do |dose| %>
    <p><%= dose.ingredient.name %> <%= dose.quantity %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_dose"></i>
      <% end %></p>
      <% end %>
  </div>
</div>

<div class="footer">
  <ul>
    <li><a href="#">
      <i class="fab fa-linkedin-in"></i></a></li>
    <li><a href="#">
      <i class="fab fa-twitter"></i></a></li>
    <li><a href="#">
      <i class="fab fa-github"></i></a></li>
  </ul>
  <p>Sharing is loving! Share your shake</p>
</div>
